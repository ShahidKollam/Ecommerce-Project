<%- include('../layout/adminHeader.ejs') %>

      <section class="section">
        <div class="container-fluid">
          <!-- ========== title-wrapper start ========== -->
          <div class="title-wrapper pt-30">
            <div class="row align-items-center">
              <div class="col-md-6">
                <div class="title">

                </div>
              </div>
              <!-- end col -->
              <div class="col-md-6">
                <div class="breadcrumb-wrapper">
                  <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                      <li class="breadcrumb-item">
                        <a href="">Dashboard</a>
                      </li>
                      <li class="breadcrumb-item active" aria-current="page">
                        Add User
                      </li>
                    </ol>
                  </nav>
                </div>
              </div>
              <!-- end col -->
            </div>
            <!-- end row -->
          </div>
          </div>
       
          <div class="card-style mb-30">
            <form action="/admin/add-user" method="post" class="reg-form">
               
                <div class="form-group fullname">
                    <h2>Add User</h2>
                    <br>
                  <label for="fullname">Full Name</label>
                  <input type="text" id="fullname" name="name" placeholder="Enter your full name">
                </div>
                <div class="form-group email">
                  <label for="email">Email Address</label>
                  <input type="text" id="email" name="email" placeholder="Enter your email address">
                </div>
                <div class="form-group mno">
                  <label for="mno">Mobile Number</label>
                  <input type="text" id="mno" name="mno" placeholder="Enter your mobile number">
                </div>
                <div class="form-group submit-btn">
                  <input type="submit" value="Confirm">
                </div>
                </form>
                <script>
                    // Check if the message query parameter is present in the URL
                    const urlParams = new URLSearchParams(window.location.search);
                    const info = urlParams.get('info');
                    
                    if (info) {
                        // Display an alert with the message
                        alert(info);
                        // remove alert when refresh
                        const newURL = window.location.pathname;
                        window.history.replaceState({}, document.title, newURL);
                    }
                </script>
                  
                <%
                if(typeof message !== 'undefined'){
                %>
                <p style="color: blue;"><%= message %></p>
                <% } %>
                
                
            <!-- end input -->
          </div>
      </section>
     
     <style>
        .centered-content {
            text-align: center; /* Center the content horizontally */
        }
    
        .card-style {
            background-color: #f9f9f9;
            padding: 20px;
            border-radius: 5px;
            width: 400px;
            margin: 0 auto;
        }
    
        .reg-form {
            text-align: left; /* Align the form elements to the left */
        }
    
        .form-group {
            margin-bottom: 20px;
        }
    
        .form-group label {
            font-weight: bold;
            color: #007bff;
        }
    
        .form-group input[type="text"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #007bff;
            border-radius: 5px;
            background-color: #fff;
        }
    
        .form-group input[type="submit"] {
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            cursor: pointer;
            font-size: 16px;
            display: block;
            margin: 0 auto;
        }
    
        .form-group input[type="submit"]:hover {
            background-color: #0056b3;
        }
    </style>
<%- include('../layout/adminFooter.ejs') %>