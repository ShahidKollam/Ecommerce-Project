<%- include('../layout/adminHeader') %>
<style>
  /* Style the button */
  .add-category-button {
      background-color: rgb(52, 194, 250);
      color: rgb(0, 0, 0);
      border: none;
      padding: 10px 20px;
      cursor: pointer;
      font-size: 16px;
      border-radius: 5px;
  }

  /* Style the input field */
  .category-input {
      width: 400px;
      padding: 10px;
      border: 1px solid rgb(45, 188, 245);
      border-radius: 5px;
      font-size: 16px;
  }
</style>

<section class="section">
  <div class="container-fluid">
    <div class="title-wrapper pt-30">
      <div class="row align-items-center">
        <div class="col-md-6">
          <div class="title">
            <h3>Add New Category</h3><br>
            <div>
              <form action="/admin/add-category" method="post">
                <input type="text" class="category-input" id="category" name="categoryName" placeholder="Enter category name" required>
                <button type="submit" class="add-category-button" value="add">Add Category</button>
              </form>
            </div>
            <h5><%= message %></h5>
          </div>
        </div>
        <!-- end col -->
        <div class="col-md-6">
          <div class="breadcrumb-wrapper">
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item">
                  <a href="">Dashboard</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                  Categories
                </li>
              </ol>
            </nav>
          </div>
        </div>
        <!-- end col -->
      </div>
      <!-- end row -->
    </div>

    <div class="row">
      <div class="col-lg-12">
        <div class="card-style mb-30">
          <h5 class="mb-10">Category List</h5>

          <div class="table-wrapper table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th>
                    <h4>Index</h4>
                  </th>
                  <th>
                    <h4>Category</h4>
                  </th>
                  <th>
                    <h4>Action</h4>
                  </th>
                </tr>
                <!-- end table row-->
              </thead>
              <tbody>
                <% if(category.length > 0){ 
                    for(let i=0; i < category.length; i++){ 
                %>
                <tr>
                  <td class="min-width">
                    <h5><%= i+1 %></h5>
                  </td>
                  <td class="min-width">
                    <h5><%= category[i].name %></h5>
                  </td>
                  <td>
                    <div class="action">
                          <a class="btn-link" href="/admin/edit-category?id=<%=category[i]._id%>">EDIT</a>
                    </div>

                    <div class="action">
                      <form id="deleteForm <%=i%>" action="/admin/delete-category?id=<%=category[i]._id%>" method="post">
                        <input type="hidden" name="action" value="<%= category[i].is_deleted ? 'actived' : 'blocked' %>">
                        <% if (category[i].is_deleted) { %>
                          <button type="button" value="actived" class="button-style list text-success" onclick="confirmRestore(<%=i%>)">
                            <i class="lni lni-unblock"></i> RESTORE
                          </button>
                        <% } else { %>
                          <button type="button" value="blocked" class="button-style remove text-danger" onclick="confirmDelete(<%=i%>)">
                            <i class="lni lni-block"></i> DELETE 
                          </button>
                        <% } %>
                      </form>
                   </div>
                  </td>
                </tr>
                <% } %>
                <% } else { %>
                <tr>
                  <td colspan="3">Category not found</td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

  </div>
</section>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

<script>
  function confirmDelete(index) {
    Swal.fire({
      title: 'Are you sure?',
      text: 'Deleting a category will also delete all associated products!',
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#d33',
      cancelButtonColor: '#3085d6',
      confirmButtonText: 'Yes, delete it!',
      customClass: {
        popup: 'small-swal',
      }
    }).then((result) => {
      if (result.isConfirmed) {
        document.getElementById(`deleteForm${index}`).submit();
      }
    });
  }

  function confirmRestore(index) {
    Swal.fire({
      title: 'Are you sure?',
      text: 'Restoring a category will also restore all associated products!',
      icon: 'question',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'Yes, restore it!',
      customClass: {
        popup: 'small-swal',
      }
    }).then((result) => {
      if (result.isConfirmed) {
        document.getElementById(`deleteForm${index}`).submit();
      }
    });
  }
</script>
<style>
  .small-swal {
    width: 900px;
  }
</style>
<%- include('../layout/adminFooter') %>
